# ============================================================================
# Aletheia Research Agent - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# MiniMax API (Required)
# ============================================================================
# Get from: https://platform.minimaxi.com/
MINIMAX_API_KEY=your_minimax_api_key_here
MINIMAX_BASE_URL=https://api.minimax.io/anthropic

# ============================================================================
# Supabase Configuration (Required)
# ============================================================================
# Get from: https://supabase.com/dashboard
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================================================
# Tavily Search API (Required for web search)
# ============================================================================
# Get from: https://tavily.com/
TAVILY_API_KEY=your_tavily_api_key

# ============================================================================
# Grok API - Agent Discovery (Optional but Recommended)
# ============================================================================
# Get from: https://x.ai
GROK_API_KEY=xai-your-grok-api-key-here

# ============================================================================
# Firecrawl API - Agent Discovery (Optional but Recommended)
# ============================================================================
# Get from: https://firecrawl.dev
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# ============================================================================
# Agent Discovery Configuration
# ============================================================================
DISCOVERY_ENABLED=true
DISCOVERY_SCHEDULE_HOUR=2
DISCOVERY_MAX_RESULTS=50
DISCOVERY_AUTO_VERIFY_THRESHOLD=0.9

# ============================================================================
# JWT Configuration
# ============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_PER_MINUTE=20

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_URL=redis://redis:6379/0

# ============================================================================
# Local PostgreSQL (Development Only)
# ============================================================================
POSTGRES_USER=aletheia
POSTGRES_PASSWORD=aletheia
POSTGRES_DB=aletheia

# ============================================================================
# Admin Tools (Optional)
# ============================================================================
PGADMIN_DEFAULT_EMAIL=admin@aletheia.com
PGADMIN_DEFAULT_PASSWORD=admin

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=development

# ============================================================================
# API Keys Summary
# ============================================================================
# Required for basic operation:
# - MINIMAX_API_KEY
# - SUPABASE_URL
# - SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY
# - TAVILY_API_KEY
#
# Required for Agent Discovery System:
# - GROK_API_KEY (from x.ai)
# - FIRECRAWL_API_KEY (from firecrawl.dev)
